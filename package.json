{
  "name": "easter-date",
  "version": "0.0.15",
  "author": "Roman OÅ¾ana <roman@ozana.cz> (https://ozana.cz)",
  "repository": "OzzyCzech/easter-date",
  "license": "MIT",
  "description": "Calculate Easter date for given year",
  "keywords": [
    "easter",
    "date",
    "calendar",
    "holly week"
  ],
  "type": "module",
  "exports": {
    "types": "./dist/index.d.ts",
    "default": "./dist/index.js"
  },
  "scripts": {
    "build": "rm -rf dist && tsc",
    "release": "np",
    "prepare": "npm run build",
    "test": "xo && tsc --noEmit && NODE_OPTIONS='--import=tsx/esm' ava",
    "ava": "NODE_OPTIONS='--import=tsx/esm' ava"
  },
  "engines": {
    "node": ">=20"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "devDependencies": {
    "@types/node": "^22.5.5",
    "ava": "^6.1.3",
    "np": "^10.0.7",
    "tsx": "^4.19.1",
    "typescript": "^5.6.2",
    "xo": "^0.59.3"
  },
  "ava": {
    "extensions": {
      "ts": "module"
    },
    "files": [
      "test/*",
      "!test/date-fns.ts"
    ],
    "workerThreads": false
  }
}
